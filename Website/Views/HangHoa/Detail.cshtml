                            <h1>@Model.TenHh</h1>
                        </div>
                        <div class="price-box">
                            <p class="special-price"> <span class="price-label">Special Price</span> <span class="price"> @((Model.DonGia * (100 - Model.GiamGia) / 100.0).ToVnd()) </span> </p>
